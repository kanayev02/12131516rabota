<Page x:Class="_91011rabota.StudentiIzm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_91011rabota"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentiIzm">

    <Grid>
        <StackPanel>
            <TextBlock Text="Введите имя ученика"/>
            <TextBox Name="Name"></TextBox>
            <TextBlock Text="Введите фамилию ученика"/>
            <TextBox Name="Fam"></TextBox>
            <TextBlock Text="Выберите класс"/>
            <ComboBox Name="Class"/>
            <TextBlock Text="Выберите форму обучения"/>
            <RadioButton Name="FormaDnev" Content="Дневная"/>
            <RadioButton Name="FormaVech" Content="Вечерняя"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Русский "/>
                <TextBox Name="Rus" Width="30"></TextBox>
                <TextBlock Text="Математика "/>
                <TextBox Name="Matem" Width="30"></TextBox>
                <TextBlock Text="Физика "/>
                <TextBox Name="Fiz" Width="30"></TextBox>
            </StackPanel>
            <Button Name="Zapisat" Click="Zapisat_Click">Записать информацию</Button>
        </StackPanel>
    </Grid>
</Page>
